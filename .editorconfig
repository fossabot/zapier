# Configuration for EditorConfig
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 79
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

[*.py]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 72
